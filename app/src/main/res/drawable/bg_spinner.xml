<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="8dp"/>
                    <stroke
                        android:width="1dp"
                        android:color="@color/gray_scale_200" />
                    <solid android:color="@color/white"/>
                    <padding
                        android:right="8dp"/>
                </shape>
            </item>

            <item
                android:drawable="@drawable/icon_arrow_down"
                android:gravity="center|end"
                android:width="24dp"
                android:height="24dp" />
        </layer-list>
    </item>
</selector>