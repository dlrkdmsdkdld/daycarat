<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_introduce1"
        android:id="@+id/text_title"
        style="@style/h6"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/next_btn"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp"
        android:id="@+id/img_introduce"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/introduce_1" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/start_agreement"
        android:layout_marginEnd="16dp"
        style="@style/sh6"
        android:layout_marginStart="16dp"
        android:textColor="@color/selector_close_btn_text"
        android:layout_marginBottom="20dp"
        android:id="@+id/next_btn"
        android:visibility="invisible"
        android:background="@drawable/selector_main_theme"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>